#!/bin/bash

echo "ğŸš€ Deploying Blue and Green versions..."
kubectl apply -f blue_deployment.yaml
kubectl apply -f green_deployment.yaml

echo "ğŸ” Switching traffic to Green version..."
kubectl apply -f kubeservice.yaml

